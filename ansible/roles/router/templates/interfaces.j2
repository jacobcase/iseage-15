# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet static
address 172.22.20.103
gateway 172.22.20.254
up ip addr add 172.22.20.150/24 dev eth0 label eth0:0
up ip addr add 172.22.20.160/24 dev eth0 label eth0:1
up ip addr add 172.22.20.170/24 dev eth0 label eth0:2


auto eth1
iface eth1 inet static
address 192.168.1.1
subnet 255.255.255.0
